  (red                  "#BF616A")
  (green                "#A3BE8C")
  (yellow               "#E7cb93")
  (orange               "#c68a75")
  (grey                 "#9BA1AB")
  (blue                 "#5e81ac")
  (cyan                 "#88c0d0")
  (purple               "#B48EAD")
  (white                "#D8DEE9")
  (black                "#3b4252")

  (error_red            "#F44747")
  (light_green          "#B5CEA8")
  (dark_yellow          "#D7BA7D")
