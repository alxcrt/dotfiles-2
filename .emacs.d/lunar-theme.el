  (comment              "#4c566a")
  (constant             yellow)
  (function_name        yellow)
  (string               green)
  (type                 purple)
  (boolean              orange)
  (keyword              blue)
  (modeline             (doom-darken bg 0.20))
  (builtin              yellow)
  (line_numbers         grey_alt)
  (current_line_number  white)
  (number               "#b5cea8")
  (highlight_line       (doom-darken bg 0.17))
  (ivy_hl_cur_line      (doom-darken bg 0.30))
  (org_source_bg        (doom-darken bg 0.10))
  (doc_strings          grey_alt)
  (lsp_face_hl          "#464646")
  (company_bg           "#4C566A")
  (company_alt_bg       (doom-darken company_bg 0.15)))

 ((default                      (:foreground fg :background bg))
  (fringe                       (:background bg))
  (cursor                       (:foreground cursor_fg :background cursor_bg))
  (region                       (:background visual_grey))
  (font-lock-keyword-face       (:foreground keyword))
  (font-lock-constant-face      (:foreground constant))
  (font-lock-string-face        (:foreground string))
  (font-lock-type-face          (:foreground type))
